                        name TEXT NOT NULL
                    </fields>
                    <index>
                        CREATE UNIQUE INDEX industry_id_uindex ON industry (id)
                    </index>
                </table>
                <table>
                    <name>nationality</name>
                    <populate>
                        SELECT id, name FROM nationality WHERE status = 'active'
                    </populate>
                    <fields>
                        id INT(11) NOT NULL,
                        name TEXT NOT NULL
                    </fields>
                    <index>
                        CREATE UNIQUE INDEX nationality_id_uindex ON nationality (id)
                    </index>
                </table>
                <table>
                    <name>occupation</name>
                    <populate>
                        SELECT id, name FROM occupation WHERE status = 'active'
                    </populate>
                    <fields>
                        id INT(11) NOT NULL,
                        name TEXT NOT NULL
                    </fields>
                    <index>
                        CREATE UNIQUE INDEX occupation_id_uindex ON occupation (id)
                    </index>
                </table>
            </stringtables>
